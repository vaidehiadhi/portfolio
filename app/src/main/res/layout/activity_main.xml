<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FAFAFA">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:src="@drawable/Profilepicture"
    android:layout_margin="10dp">
</ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaidehi Adhi"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Aspiring Android Developer"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="8dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm Vaidehi Adhi, a passionate and Aspiring App developer with a knack for creating seamless, user-centric digital experiences. I am on a mission to contribute innovative solutions to the ever-evolving tech landscape."
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="5dp">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Stack development | Python | Java | SQL | AI-ML"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_margin="2dp">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="20dp"
            android:baselineAlignBottom="true"
            android:src="@drawable/linkedin_3536505"></ImageView>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="20dp"
            android:baselineAlignBottom="true"
            android:onClick="github"
            android:src="@drawable/github_1051326"></ImageView>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="20dp"
            android:baselineAlignBottom="false"
            android:src="@drawable/leetcode"></ImageView>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="20dp"
            android:baselineAlignBottom="true"
            android:src="@drawable/instagram_2111463"></ImageView>

    </LinearLayout>